          <div class="text-center" style="padding-top: 40px; padding-bottom: 20px;">
        <div class="container" >
            <h1 class="display-12 text-center"> Jaggery Traceability Application </h1>
            <form class="form-signin" id="add-form" method="post">
                <h1 class="h2 mb-3 font-weight-normal text-center">Add Product</h1>
                <input type="text" id="product_Name" name="p_name" class="form-control" placeholder="Product Name" required autofocus>
                <br/>
                <input type="number" id="product_id" name="p_id" class="form-control" placeholder="Product ID" required>
                <br/>
                <input type="text" id="product_quantity" name="p_quantity" class="form-control" placeholder="Quantity" required >
                <br/>
                <input type="number" id="product_price" name="price" class="form-control" placeholder="Price" required>
                <br/>
                <label for="role-select" class="text-align-left">Expiry Date</label>
                <input type="date" id="exp_date" name="exp_date" class="form-control" placeholder="Expiry Date" required>
                <br />
                <textarea  type="text" id="desc" name="desc"  placeholder="Description" class="form-control" required></textarea>
                <br />
                <input type="checkbox" name="is_organic" id="confirm-chk" required><span> Is Organic </span>
                <br/>
                <br/>
                <button class="btn btn-lg btn-success btn-block" type="submit" id="add-product-btn" >Add Product</button>
            </form>
            <div style=" font-weight: bolder;">	<span id="check" ></span> </div>
            <div id="LangTable"><a href="/dashboard" id="aa"> </a> </div>
        </div>

